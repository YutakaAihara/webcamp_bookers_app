<h1 class="index-heading">Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th clspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book) %></td>
      <td><%= link_to "Edit", edit_book_path(book) %></td>
      <td><%= link_to "Destroy", book_path(book), method: :delete, data: {confirm: "Are you sure?"} %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<h2 class="new-heading">New book</h2>
<% if @book.errors.any? %>
<div class="error">
  <p class="error-count">
    <%= @book.errors.count %>errors prohibited this book from being saved:
  </p>
  <ul class="error-contents">
      <% @book.errors.full_messages.each do |message| %>
      <li class="error-message">
        <%= message %>
      </li>
      <% end %>
    </li>
  </ul>
</div>
<% end %>
<%= form_with model:@book, local:true, class: "new_book" do |f| %>
  <div class="field">
    <%= f.label :title, 'Title', class: "book_title" %>
    <%= f.text_field :title, class: "book_title" %>
  </div>
  <div class="field">
    <%= f.label :body, 'Body', class: "book_body" %>
    <%= f.text_area :body, class: "book_body" %>
  </div>
  <%= f.submit 'Create Book', class: "btn" %>
<% end %>
