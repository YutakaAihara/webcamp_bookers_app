<main>
  <h1 class="index-heading">Books</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th clspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>ああああ</td>
        <td>あああああ</td>
        <td>Show</td>
        <td>Edit</td>
        <td>Destroy</td>
      </tr>
    </tbody>
  </table>

  <h2 class="new-heading">New book</h2>
  <%= form_with model:@books, local:true do |f| %>
    <div class="new-content">
      <p>Title</p>
      <%= f.text_field :title %>
    </div>
    <div class="new-content">
      <p>Body</p>
      <%= f.text_area :body %>
    </div>
    <%= f.submit 'Create Book', class: 'btn'%>
  <% end %>
</main>
